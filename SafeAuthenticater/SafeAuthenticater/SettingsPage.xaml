<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeAuthenticater.SettingsPage">
    <ContentPage.Content>
        <TableView Intent="Data">
            <TableRoot>
                <TableSection Title="Account">
                    <TextCell Text="Account Status" Detail="430/1000" DetailColor="Gray"/>
                    <SwitchCell Text="Auto Reconnect"/>
                </TableSection>
                <TableSection Title="Help">
                    <TextCell Text="FAQs" />
                    <TextCell Text="Privacy statement" />
                    <TextCell Text="Application version" Detail="0.1.0" DetailColor="Gray"/>
                </TableSection>
                <TableSection>
                    <TextCell Text="Logout" TextColor="Red"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>